#include <stdio.h>
#include <math.h>
#include <windows.h>
using namespace stu;
int main()
{
	//Declarando variables
	int opcion;
	float n1, n2, resultado;
  cout<<"ingrese dos numeros"<<endl;
  cout<<"primer numero:"<<endl;
  cin>>a;
  cout<<"segundo numero:"<<endl;
  cin>>b;
  cout<<endl<<"menu"<<endl<<endl;
  cout<<"1.suma"<<endl;
  cout<<"2.resta"<<endl;
  cout<<"3.division"<<endl;
  cout<<"4.multiplicacion"<<endl;
  cout<<"5.potencia"<<endl;
  cout<<"6.raiz cuadrada"<<endl;
  cout<<"7.salir"<<endl;
  cout<<endl<<"eliga una opcion"<<endl<<endl;
  cin>>opcion;
  cout<<endl;

	//Estructura de control de selecciÃ³n multiple

	switch(opcion)
	{
	case 1:
		resultado = n1 + n2;
		break;
	case 2:
		resultado = n1 - n2;
		break;
	case 3: 
		if(n2==0)
		{
			printf("La operacion entre 0 no esta definida");
		}
		else{
		resultado = n1 / n2;
		}
		break;
	case 4: 
		resultado = n1 * n2;
		break;
	case 5: 		
		resultado = pow(n1,n2);
		break;
	case 6: 
		if(n1<0){
				printf("No esta definida");
		}
		else{
			resultado = sqrt(n1);
		}
		break;
	default:
		printf("Salir");
		exit(0);
	}	//Sale break
}while(opcion<7);
} 
cout<<"el resultado es:"<<resultado<<endl;
return 0;
}
